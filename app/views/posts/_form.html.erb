<h1>Would you like to create a post?</h1>

<%= form_for @post do |f| %>
    <%= f.label :title, "Post Title" %>
    <%= f.text_field :title %><br><br>

    <%= f.label :content, "Post Content" %>
    <%= f.text_area :content %><br><br>


    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>

    <%= f.fields_for :categories, post.categories.build do |cat| %>
        <%= cat.label :name, "Category Name" %>
        <%= cat.text_field :name %><br><br>
    <% end %>

    <%= f.submit %>

<% end %>


